<Window x:Class="MRP_Black_Jewlery.frmMostrarRelatorio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatórios" Height="600" Width="800">
    <Grid>
        <TextBlock Text="Relatórios" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TabControl Name="ReportTabControl" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20,50,20,20" Height="500" Width="760">
            <TabItem Header="Gasto Máquina - Funcionário">
                <DataGrid Name="GastoMaquinaFuncionarioDataGrid" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="Lucro por máquina">
                <DataGrid Name="LucroPorMaquinaDataGrid" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="Produtividade por funcionário">
                <DataGrid Name="ProdutividadePorFuncionarioDataGrid" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="Renda por produção">
                <DataGrid Name="RendaPorProducaoDataGrid" AutoGenerateColumns="True"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
